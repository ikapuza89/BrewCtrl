# Install requirements
pacman -S git gcc make pkg-config json-c

# Check out code
cd /opt/
git clone https://github.com/mohaine/BrewCtrl.git
cd /opt/BrewCtrl/

# Compile
make brewctrl

# Install Service 
cp BrewCtrl.service /etc/systemd/system/
systemctl enable BrewCtrl



# Update install
cd /opt/BrewCtrl/
git pull 
make clean brewctrl
systemctl restart BrewCtrl

